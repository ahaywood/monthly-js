---
import "../styles/globals.css";
import Footer from "../components/Footer.astro";

const { frontmatter } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>
	<body>
		<header class="text-center">
			<div class="absolute right-3 top-2 uppercase font-wide">
				<a href="https://store.selfteach.me/login" rel="noopener noreferrer" target="_blank" class="hover:text-hotMagenta">Login</a>
			</div>
      <div class="bg-white text-black font-wide text-base uppercase tracking-widening inline-block px-5 py-1 mb-5">
				1 <span class="text-hotMagenta">FREE</span> CHALLENGE EACH MONTH
			</div>
			<div class="font-wide text-hotMagenta uppercase text-2xl tracking-widening mb-5 relative">Monthly Javascript</div>
    </header>
    <main class="px-10 pt-0 pb-20">
      <a href="/" class="flex items-center font-wide uppercase text-base mb-10 gap-x-5 hover:text-hotMagenta"><img src="/images/arrow.svg" alt="arrow" class="rotate-90" /> Back</a>
      <h1 class="font-wide text-white text-[10vw] leading-none uppercase mb-12">{frontmatter.title}</h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>